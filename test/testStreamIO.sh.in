  cmd2=`@DIFF_Q@ testStreamIO2.out @srcdir@/testHepMC.dat`
  cmd5=`@DIFF_Q@ testStreamIO3.out @srcdir@/testHepMC.dat`
  cmd6=`@DIFF_Q@ testStreamIO4.out @srcdir@/testHepMC.dat`
